{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [ "ES2022" ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
      "lib"
  ]
}
